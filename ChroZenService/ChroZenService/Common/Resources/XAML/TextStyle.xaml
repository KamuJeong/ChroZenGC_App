<?xml version="1.0" encoding="UTF-8"?>
    <?xaml-comp compile="true" ?>
    <ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="HTX" TargetType="{x:Type Label}">
        <Setter Property="TextColor" Value="#a8acc4" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style x:Key="HTX1" TargetType="{x:Type Label}" BasedOn="{StaticResource HTX}">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style x:Key="HTX2" TargetType="{x:Type Label}" BasedOn="{StaticResource HTX}">
        <Setter Property="TextColor" Value="#ffffff" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="HTX3" TargetType="{x:Type Label}" BasedOn="{StaticResource HTX2}">
        <Setter Property="FontSize" Value="25" />
    </Style>
</ResourceDictionary>