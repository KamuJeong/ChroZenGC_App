    <Style TargetType="{x:Type Label}" x:Key="TSL">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="#ffffff" />
        <Setter Property="FontAttributes" Value="Normal" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

  
    <ControlTemplate x:Key="PickerSwitch" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="30" />
            </Grid.ColumnDefinitions>
            <Frame
                  x:Name="Frame" 
                  Grid.ColumnSpan="2"
                  CornerRadius="0"
                  Background="#ffffff"
                   />
            <Frame 
                  Grid.Column="0"
                  CornerRadius="0" 
                  Background="#ffffff" 
                 />
            <Polygon 
                  x:Name="Arrow"
                  Grid.Column="1"     
                  Fill="Black"
                  HorizontalOptions="Center"
                  VerticalOptions="Center"
                  Points="0,0 5,5,10,0"
                />
        </Grid>
