<?xml version="1.0" encoding="UTF-8"?>
    <?xaml-comp compile="true" ?>
    <ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    >

    <Style x:Key="stl_btnBase" TargetType="{x:Type Button}" >
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

    <Style x:Key="UpDownButton" TargetType="{x:Type Button}" BasedOn="{StaticResource stl_btnBase}" >
        
    </Style>

    <Style x:Key="StartButton" TargetType="{x:Type Button}" BasedOn="{StaticResource stl_btnBase}" >
      
    </Style>

    <Style x:Key="StopButton" TargetType="{x:Type Button}" BasedOn="{StaticResource stl_btnBase}" >
        
    </Style>

