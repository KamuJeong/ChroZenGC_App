    </Style>

    <Style x:Key="ApplyButton" TargetType="{x:Type Button}" BasedOn="{StaticResource stl_btnBase}" >
     
    </Style>

    <Style x:Key="TransparentButton" TargetType="{x:Type Button}" >
        <Setter Property="Background" Value="Transparent"/>
     
    </Style>

    <Style x:Key="BtnX" TargetType="{x:Type Button}"   BasedOn="{StaticResource stl_btnBase}">        
        <Setter Property="FontSize" Value="12" />
       
