        <Frame Grid.Row="0">
            <StackLayout Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="Center">
                 <Label Text="Runtime"  Style="{StaticResource HTX}" FontSize="33"  TextColor="#ffffff"  />
                <Editor x:Name="label_runtime"  Style="{StaticResource TU-N}" WidthRequest="340"  />
                <Label Text="min"  Style="{StaticResource HTX}" FontSize="20"  >
                    <Label.Margin>
                        <Thickness >
                            <Thickness.Left>10</Thickness.Left>
                            <Thickness.Right>0</Thickness.Right>
                            <Thickness.Top>0</Thickness.Top>
                            <Thickness.Bottom>0</Thickness.Bottom>
                        </Thickness>
                    </Label.Margin>
                </Label>
            </StackLayout>
        </Frame>

        <Frame Grid.Row="1" Padding="10">
            <StackLayout Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="Center">
                <Label Text="Runstart"  Style="{StaticResource HTX}" FontSize="22" TextColor="#ffffff"  />
                <Editor x:Name="label_runstart"  Style="{StaticResource TU}" Text="Runstart"  WidthRequest="300"  />
            </StackLayout>
        </Frame>

        <Frame Grid.Row="2" Padding="40, 0, 40, 0">
            <loc:monitor_chart x:Name="_chartCtrl" />
        </Frame>
        
