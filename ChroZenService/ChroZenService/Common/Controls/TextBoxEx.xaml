<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChroZenService.Common.Controls.TextBoxEx">
  <ContentView.Content>
        <StackLayout HorizontalOptions="Fill" VerticalOptions="Fill">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=TapGestureCommand}"/>
            </StackLayout.GestureRecognizers>
            <Editor Text="{Binding Source={RelativeSource AncestorType={x:Type ContentView}},Path=Title}" TextColor="{StaticResource CS_COLOR_WHITE_0}" FontSize="24" FontAttributes="Bold"  HorizontalOptions="Center" BackgroundColor="Transparent" Margin="0,5,0,0"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>