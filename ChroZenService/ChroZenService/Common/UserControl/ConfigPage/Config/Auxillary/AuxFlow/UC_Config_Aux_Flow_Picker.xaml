<?xml version="1.0" encoding="UTF-8"?>
<Picker xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ChroZenService"
             xmlns:behaviors="clr-namespace:Xamarin.Forms.BehaviorsPack;assembly=Xamarin.Forms.BehaviorsPack"
             x:Class="ChroZenService.UC_Config_Aux_Flow_Picker" >
    <Picker.Behaviors>
        <behaviors:EventToCommandBehavior EventName="SelectedIndexChanged" EventArgsConverter="{StaticResource ValveProgramSelectedIndexToParameterConverter}"
                                          Command="{Binding Source={RelativeSource AncestorType={x:Type local:UC_Config_Valve_Program_Picker}}, Path=UCSelectedIndexChangedCommand}"
                                          CommandParameter="{Binding Source={RelativeSource AncestorType={x:Type local:UC_Config_Valve_Program_Picker}}, Path=UCSelectedIndexChangedCommandParameter}"/>
    </Picker.Behaviors>
</Picker>