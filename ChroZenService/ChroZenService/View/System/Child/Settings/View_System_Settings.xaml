                    <Label Grid.Row="4" Grid.Column="0" Text="Final Time" Style="{StaticResource STYLE_LABEL_SYSTEM_SETTING_INPUT_TITLE}" />
                    <local:UC_System_SETTING_LABEL Grid.Row="4" Grid.Column="1" IsEnabled="{Binding ViewModelSystemPage.ViewModel_System_Settings.bOnoff, Converter={StaticResource BoolReverseConverter}}" Text="{Binding ViewModelSystemPage.ViewModel_System_Settings.fFinalTime}"  Style="{StaticResource STYLE_LABEL_SYSTEM_SETTING_EDITOR}" TapGestureCommand="{Binding ViewModelSystemPage.ViewModel_System_Settings.SetCommand}" TapGestureCommandParameter="{x:Static local:ChroZenService_Const+E_SYSTEM_SETTING_INPUT_TYPE.FINAL_TIME}"/>
                    <Label Grid.Row="4" Grid.Column="1" Text="min" Style="{StaticResource STYLE_LABEL_UNIT}" Margin="0,10,10,0"/>
                </Grid>

                <Frame Grid.Row="2" Grid.ColumnSpan="2" CornerRadius="18" Margin="18,3,18,3" Background="{StaticResource SCB_CONTROL_BACKGROUND_DARK_0}">

                </Frame>
                <Label Grid.Row="2" Grid.Column="0" Text="Remote Access" Style="{StaticResource STYLE_LABEL_SYSTEM_INFORMATION_COLUMN_TITLE}" />
                <local:UC_ON_OFF_Button Grid.Row="2" Grid.Column="1" IsOn="{Binding ViewModelSystemPage.ViewModel_System_Settings.RemoteAccess_bOnoff}" ButtonMargin="5,7,0,1" OnCommand="{Binding ViewModelSystemPage.ViewModel_System_Settings.RemoteAccess_OnCommand}" OffCommand="{Binding ViewModelSystemPage.ViewModel_System_Settings.RemoteAccess_OffCommand}"  WidthRequest="179"/>

                <Frame Grid.Row="3" Grid.ColumnSpan="2" CornerRadius="18" Margin="18,3,18,3" Background="{StaticResource SCB_CONTROL_BACKGROUND_DARK_0}">

                </Frame>
                <Grid Grid.Row="3" Grid.ColumnSpan="2" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{StaticResource HEIGHT_CONTROLPAGE_NARROW_1_PLUS7}"/>
                        <RowDefinition Height="{StaticResource HEIGHT_CONTROLPAGE_NARROW_1_PLUS7}"/>
                        <RowDefinition Height="{StaticResource HEIGHT_CONTROLPAGE_NARROW_1_PLUS7}"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="208"/>
                        <ColumnDefinition Width="179"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Text="Remote Time" Style="{StaticResource STYLE_LABEL_SYSTEM_SETTING_INPUT_TITLE}" />
                    <Line  Grid.Row="0" Grid.Column="0" X1="207" X2="207" Y1="5" Y2="145" Grid.RowSpan="4" Stroke="Gray" />
