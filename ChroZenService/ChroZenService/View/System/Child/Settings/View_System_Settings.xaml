                    <Label Grid.Row="0" Grid.Column="1" Text="℃" Style="{StaticResource STYLE_LABEL_UNIT}" Margin="0,10,10,0"/>
                    
                    <Label Grid.Row="1" Grid.Column="0" Text="Init Time" Style="{StaticResource STYLE_LABEL_SYSTEM_SETTING_INPUT_TITLE}" />
