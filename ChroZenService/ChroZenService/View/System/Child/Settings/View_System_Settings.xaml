                        <!--<local:UC_System_SETTING_LABEL.Triggers>
                            <Trigger Property="IsEnabled" Value="true" TargetType="{x:Type local:UC_System_SETTING_LABEL}">
                                <Setter Property="Background" Value="{StaticResource LGB_CONTROL_SYSTEM_EDITOR_BACKGROUND_BLUE_0}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false" TargetType="{x:Type local:UC_System_SETTING_LABEL}">
                                <Setter Property="Background" Value="{StaticResource SCB_CONTROL_SYSTEM_EDITOR_BACKGROUND_GRAY_0}"/>
                            </Trigger>
                        </local:UC_System_SETTING_LABEL.Triggers>-->
                    </local:UC_System_SETTING_LABEL>
                    <Label Grid.Row="1" Grid.Column="1" Text="min" Style="{StaticResource STYLE_LABEL_UNIT}" Margin="0,10,10,0"/>

                    <Label Grid.Row="2" Grid.Column="0" Text="Remote event 2" Style="{StaticResource STYLE_LABEL_SYSTEM_SETTING_INPUT_TITLE}" />
                    <local:UC_System_SETTING_LABEL Grid.Row="2" Grid.Column="1" IsEnabled="{Binding ViewModelSystemPage.ViewModel_System_Settings.RemoteAccess_bOnoff}" Text="{Binding ViewModelSystemPage.ViewModel_System_Settings.fEventTime2}"  Style="{StaticResource STYLE_LABEL_SYSTEM_SETTING_EDITOR}" TapGestureCommand="{Binding ViewModelSystemPage.ViewModel_System_Settings.SetCommand}" TapGestureCommandParameter="{x:Static local:ChroZenService_Const+E_SYSTEM_SETTING_INPUT_TYPE.REMOTE_EVENT2}">
                        <!--<local:UC_System_SETTING_LABEL.Triggers>
                            <Trigger Property="IsEnabled" Value="true" TargetType="{x:Type local:UC_System_SETTING_LABEL}">
                                <Setter Property="Background" Value="{StaticResource LGB_CONTROL_SYSTEM_EDITOR_BACKGROUND_BLUE_0}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false" TargetType="{x:Type local:UC_System_SETTING_LABEL}">
                                <Setter Property="Background" Value="{StaticResource SCB_CONTROL_SYSTEM_EDITOR_BACKGROUND_GRAY_0}"/>
                            </Trigger>
                        </local:UC_System_SETTING_LABEL.Triggers>-->
                    </local:UC_System_SETTING_LABEL>
                    <Label Grid.Row="2" Grid.Column="1" Text="min" Style="{StaticResource STYLE_LABEL_UNIT}" Margin="0,10,10,0"/>
                </Grid>

                <Grid Grid.Row="4" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{StaticResource HEIGHT_CONTROLPAGE_1}"/>
                        <RowDefinition Height="{StaticResource HEIGHT_CONTROLPAGE_1}"/>
                        <RowDefinition Height="{StaticResource HEIGHT_CONTROLPAGE_1}"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="178"/>
                        <ColumnDefinition Width="239"/>
                    </Grid.ColumnDefinitions>
                    <Frame Grid.Row="0" Grid.ColumnSpan="2" CornerRadius="18" Margin="18,3,18,3" Background="{StaticResource SCB_CONTROL_BACKGROUND_DARK_0}">

                    </Frame>
                    <Label Grid.Row="0" Grid.Column="0" Text="Install Date" Style="{StaticResource STYLE_LABEL_SYSTEM_INFORMATION_COLUMN_TITLE}" InputTransparent="True"/>
                    <Line  Grid.Row="0" Grid.Column="0" Style="{StaticResource STYLE_LINE_SYSTEM_INFORMATION_TITLE}"/>
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding ViewModelSystemPage.ViewModel_System_Settings.InstDate}" Style="{StaticResource STYLE_LABEL_SYSTEM_INFORMATION_COLUMN_VALUE}" />

                    <Frame Grid.Row="1" Grid.ColumnSpan="2" CornerRadius="18" Margin="18,3,18,3" Background="{StaticResource SCB_CONTROL_BACKGROUND_DARK_0}">

                    </Frame>
                    <Label Grid.Row="1" Grid.Column="0" Text="Date" Style="{StaticResource STYLE_LABEL_SYSTEM_INFORMATION_COLUMN_TITLE}" InputTransparent="True"/>
                    <Line  Grid.Row="1" Grid.Column="0" Style="{StaticResource STYLE_LINE_SYSTEM_INFORMATION_TITLE}"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding ViewModelSystemPage.ViewModel_System_Settings.Date}" Style="{StaticResource STYLE_LABEL_SYSTEM_INFORMATION_COLUMN_VALUE}" />

                    <Frame Grid.Row="2" Grid.ColumnSpan="2" CornerRadius="18" Margin="18,3,18,3" Background="{StaticResource SCB_CONTROL_BACKGROUND_DARK_0}">

                    </Frame>
                    <Label Grid.Row="2" Grid.Column="0" Text="Time" Style="{StaticResource STYLE_LABEL_SYSTEM_INFORMATION_COLUMN_TITLE}" InputTransparent="True"/>
                    <Line  Grid.Row="2" Grid.Column="0" Style="{StaticResource STYLE_LINE_SYSTEM_INFORMATION_TITLE}"/>
                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding ViewModelSystemPage.ViewModel_System_Settings.Time}" Style="{StaticResource STYLE_LABEL_SYSTEM_INFORMATION_COLUMN_VALUE}" />

                </Grid>


            </Grid>
