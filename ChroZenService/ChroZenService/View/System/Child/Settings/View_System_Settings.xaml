                    <Label Grid.Row="2" Grid.Column="0" Text="Rate" Style="{StaticResource STYLE_LABEL_SYSTEM_SETTING_INPUT_TITLE}" />
                    <local:UC_System_SETTING_LABEL Grid.Row="2" Grid.Column="1" IsEnabled="{Binding ViewModelSystemPage.ViewModel_System_Settings.bOnoff, Converter={StaticResource BoolReverseConverter}}" Text="{Binding ViewModelSystemPage.ViewModel_System_Settings.fRate}"  Style="{StaticResource STYLE_LABEL_SYSTEM_SETTING_EDITOR}" TapGestureCommand="{Binding ViewModelSystemPage.ViewModel_System_Settings.SetCommand}" TapGestureCommandParameter="{x:Static local:ChroZenService_Const+E_SYSTEM_SETTING_INPUT_TYPE.RATE}"/>
