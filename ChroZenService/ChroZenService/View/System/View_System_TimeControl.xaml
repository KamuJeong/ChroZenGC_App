<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ChroZenService"
             xmlns:wrapper="clr-namespace:ChroZenGC.Core.Wrappers;assembly=ChroZenGC.Core"
             x:Class="ChroZenService.View_System_TimeControl"
             x:DataType="local:ViewModel_System">
    <ContentView.Resources>
        <Style x:Key="captionKey" TargetType="Label">
            <Setter Property="TextColor" Value="Silver" />
            <Setter Property="FontSize"  Value="{StaticResource CaptionFontSizeKey}" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>

        <Style x:Key="groupKey" TargetType="Frame">
            <Setter Property="Background" Value="{StaticResource GroupingFrameBackgroudKey}" />
            <Setter Property="BorderColor" Value="Transparent" />
            <Setter Property="Padding" Value="15" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>

        <ColumnDefinitionCollection x:Key="columnProgram">
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.8*" />
        </ColumnDefinitionCollection>
    </ContentView.Resources>
    
    <ContentView.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="710*"/>
                <RowDefinition Height="22*"/>
            </Grid.RowDefinitions>

            <ScrollView Grid.Row="2">
                <Frame  Style="{StaticResource groupKey}">

                    <Grid RowSpacing="0" ColumnSpacing="5" ColumnDefinitions="{StaticResource columnProgram}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="0.2" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Label Text="Date" 
                                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Center" Style="{StaticResource captionKey}" />
                        <Label Text="Time" 
                                   Grid.Row="0" Grid.Column="2" HorizontalOptions="Center" Style="{StaticResource captionKey}" />
                        <Label Text="Function" 
                                   Grid.Row="0" Grid.Column="3" HorizontalOptions="Center" Style="{StaticResource captionKey}" />
                        <Label Text="Val" 
                                   Grid.Row="0" Grid.Column="4" HorizontalOptions="Center" Style="{StaticResource captionKey}" />

                        <BoxView BackgroundColor="Silver" Grid.Row="2" Grid.ColumnSpan="5"/>

                        <StackLayout BindableLayout.ItemsSource="{Binding Model.TimeControl.Program}" 
                                         Grid.Row="3" Grid.ColumnSpan="5" BackgroundColor="Transparent" Spacing="0" >
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Grid x:DataType="wrapper:_TimeProgramWrapper" ColumnSpacing="5" ColumnDefinitions="{StaticResource columnProgram}">
                                        <CheckBox IsChecked="{Binding EveryDay}" Color="Silver" />
                                        <DatePicker Grid.Column="1" Style="{StaticResource captionKey}"  VerticalOptions="CenterAndExpand" />
                                        <TimePicker Grid.Column="2" Time="11:00" Style="{StaticResource captionKey}" />
                                        <local:EnumPicker Title="Function" Value="{Binding Function}"
                                                          ScaleY="1.0"      Grid.Column="3"/>
                                        <local:ValueEditor Value="{Binding Value, StringFormat='{0:G}'}" 
                                                               Caption="Value"
                                                                Grid.Column="4" />

                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </Grid>
                </Frame>
            </ScrollView>
        </Grid>
    </ContentView.Content>
</ContentView>